<h1><%= @jampost.title %> <%= link_to "(edit)", edit_jampost_path(@jampost) %></h1>

<%= image_tag @jampost.img_url %>
<p>Loctaion: <%= @jampost.location %></p>
<p><%= @jampost.body %></p>
<%= @jampost.instruments.each do |instrument| %>
  <h3><%= instrument.instrument %></h3>
<% end %>


<h2>Comments</h2>
<% @jampost.comments.each do |comment| %>
  <p>
    <%= "#{comment.name}        - #{comment.body}" %>
  </p>
  <%= link_to "Edit", edit_jampost_comment_path(@jampost, comment) %>
  <%= link_to "Delete", jampost_comment_path(@jampost, comment), method: :delete %>
<% end %>
<hr>

<h2>Add Comment</h2>

<%= form_for [@jampost, @comment] do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %>
</p>
<% end %>
