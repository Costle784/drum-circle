<h1 class="showtitle"><%= @jampost.title %></h1>

<% if @jampost.user == current_user %>
  <h3><%= link_to "(edit)", edit_jampost_path(@jampost) %></h3>
<% end %>

<%= image_tag @jampost.img_url %>
<p><span class='showinfo'>Location: </span><%= @jampost.location %></p>
<p><span class='showinfo'>Time: </span><%= @jampost.time %></p>
<p><span class='showinfo'>About: </span><%= @jampost.body %></p>



<% if @jampost.instruments %>
  <% @jampost.instruments.each do |inst| %>
    <h3><%= inst.instrument %></h3>
  <% end %>
<% end %>

<hr>
<h2>Comments</h2>
<% @jampost.comments.each do |comment| %>
  <p>
    <%= comment.body %>
  </p>
  <p class='commentinfo' >
    <%= " -" + comment.name %>
    <%= comment.created_at %>
  </p>
  <% if @jampost.user == current_user %>
    <%= link_to "Edit", edit_jampost_comment_path(@jampost, comment) %>
    <%= link_to "Delete Comment", jampost_comment_path(@jampost, comment), method: :delete %>
  <% end %>
<% end %>


<h2>Add Comment</h2>

<%= form_for [@jampost, @comment] do |f| %>
<p>
  <%= f.label "name" %>
  <%= f.text_field :name%>
</p>
<p>
  <%= f.label "Comment:" %>
  <%= f.text_field :body %>
</p>
<p>
    <%= f.submit "Add comment" %>
  </p>
<% end %>
